

<%= form_with(model: @product, url: company_products_path, method: :post) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label :category %>
  <%= f.text_field :category %>

  <%= f.label :brand %>
  <%= f.text_field :brand %>

  <%= f.label :description %>
  <%= f.text_area :description %>
  
  <%= f.hidden_field :company_id, value: params[:company_id] %>

  <%= f.submit %>
<% end %>